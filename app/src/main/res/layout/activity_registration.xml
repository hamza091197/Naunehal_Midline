<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.example.naunehalmidline.Registration" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registration"
        android:orientation="vertical"
        android:background="@drawable/login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:background="#3fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naunehal Midline"
                android:background="@drawable/circle"
                android:gravity="center"
                android:textColor="#ffff"
                android:padding="10dp"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Username"
                android:textColorHint="#FFFBF0"
                android:background="@drawable/loginedittext"
                android:padding="5dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Email"
                android:textColorHint="#FFFBF0"
                android:background="@drawable/loginedittext"
                android:padding="5dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Password"
                android:textColorHint="#FFFBF0"
                android:background="@drawable/loginedittext"
                android:padding="5dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:hint="Confirm Password"
                android:textColorHint="#FFFBF0"
                android:background="@drawable/loginedittext"
                android:padding="5dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/registration"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:text="SignUp"
                android:background="@drawable/btncolor"
                android:textColorHint="#FFFBF8"/>

        </LinearLayout>

    </LinearLayout>
</layout>