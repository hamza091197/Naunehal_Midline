                        android:id="@+id/btn_fifth"
                        style="@style/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightBlue"
                        android:onClick="sound"
                        android:text="PD"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
