                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightBlue"
                        android:onClick="sound"
                        android:text="BF"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/btn_seven"
                        style="@style/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightBlue"
                        android:onClick="sound"
                        android:text="G5"
                        android:textSize="15sp" />

                    <Button
